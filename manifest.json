{
  "manifest_version": 2,

  "name": "ChromeCiter",
  "version": "1.2",

  "description": "Automatically create MLA in-text citations in your browser",

  "icons": {
     "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon38.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage",
    "tabs", 
    "<all_urls>"
    ]
}